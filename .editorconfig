# EditorConfig for VPS Provisioning Project
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
max_line_length = 100

# Bash scripts in bin/ (no extension)
[bin/*]
indent_style = space
indent_size = 2
max_line_length = 100

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Black formatter default

# BATS test files
[*.bats]
indent_style = space
indent_size = 2

# Markdown documentation
[*.md]
max_line_length = 100
trim_trailing_whitespace = false  # Preserve double-space line breaks

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefiles (require tabs)
[Makefile]
indent_style = tab
indent_size = 4

# Configuration files
[*.conf]
indent_style = space
indent_size = 2

# Ignore files
[.gitignore]
indent_style = space
indent_size = 2
